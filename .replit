# ------------ Ambiente Nix mantido ---------------------------
modules = ["nodejs-20", "web", "postgresql-16"]

[nix]
channel = "stable-24_05"

# ------------ Comando principal ------------------------------
run = "npm start"

[deployment]
run = ["sh", "-c", "npm start"]

# ------------ Workflows intactos -----------------------------
[workflows]
runButton = "Full Stack Development"

[[workflows.workflow]]
name = "Development Server"
author = 42617357
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"

[[workflows.workflow]]
name = "Simple Server"
author = 42617357
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python -m http.server 5000"

[[workflows.workflow]]
name = "Backend Server"
author = 42617357
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd server && npx tsx dev.ts"

[[workflows.workflow]]
name = "Full Stack Development"
author = 42617357
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd server && npx tsx dev.ts"

# ------------ Portas visíveis no painel Networking ------------
[[ports]]
localPort = 3001
externalPort = 3001 # backend + dist (produção)

[[ports]]
localPort = 5001 # Vite dev-server (externalPort atribuído automaticamente)
